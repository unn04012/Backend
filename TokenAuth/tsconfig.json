{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",    
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node", 
    "esModuleInterop": true,   
    "typeRoots": ["./node_modules/@types", "./@types"],       /* List of folders to include type definitions from. */
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
